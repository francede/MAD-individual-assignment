<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBeige</item>
        <item name="colorAccent">@color/colorPrimaryRed</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>
        <item name="android:searchViewStyle">@style/AppTheme.SearchViewStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryRed</item>
    </style>

    <style name="AppTheme.SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/colorPrimaryGrey</item>
        <item name="android:textColorHint">@color/colorPrimaryRed</item>
    </style>
</resources>
